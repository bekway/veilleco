            $( "#cookies-banner" ).animate({
                opacity: 1,
                height: "toggle"
            }, 500, function() {
            });
        }
    });

    function accepter()
    {
        $.cookie('cookies-accepte','oui',{expires:365,path:'/'});
        $( "#cookies-banner" ).animate({
            opacity: 0.25,
            height: "toggle"
        }, 500, function() {
        });
    }

    // -->
		</script>
		<div id="cookies-banner" style="display:none;">
			<div class="texte">En poursuivant votre navigation sur ce site, vous acceptez l'utilisation de cookies pour réaliser des statistiques de visites.</div>
			<div class="boutons"><a href="/info-cookies">En savoir plus</a> <a href="#" onclick="javascript:accepter()">Accepter</a></div>
		</div>
