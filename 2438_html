		<script type="text/javascript">
    function trackClick(category, link, label) {
        ga('send', 'event', category, link, label);
    }
    ;
		</script>
		<script type="text/javascript">
    define(['jquery'], function () {
        $.noConflict();
        var filetypes = /\.(zip|exe|pdf|doc*|xls*|ppt*|mp3)$/i;


        $(document).ready(function () {
            $('a').click(function () {

                //var eventCategory = $(this).attr('title');
                var trackURL = $(this).attr('href');
                var text = $(this).text();

                //check for links starting with http or https, making sure that links to our own domain are excluded
                if ((trackURL.match(/^https?\:/i)) && (!trackURL.match(document.domain))) {
                    var extLink = trackURL.replace(/^https?\:\/\//i, '');
                    trackClick('Lien externe', extLink, text);
                }
                //check for links starting with mailto:
                else if (trackURL.match(/^mailto\:/i)) {
                    var mailLink = trackURL.replace(/^mailto\:/i, '');
                    trackClick('Email', mailLink, text);
                }
                //check for links with file extension that match the filetypes regular expression:
                else if (trackURL.match(filetypes)) {
                    //var extension = (/[.]/.exec(trackURL)) ? /[^.]+$/.exec(trackURL) : undefined;
                    // Retire le nom de domaine et le protocole si le lien est du type http://www.mydomain.com/...
                    var filePath = trackURL.replace(/^https?\:\/\/(cc82.)malomagne\.com\//i, '');
                    trackClick('Telechargement', filePath, text);
                }
            });
        });
    });
		</script>
	</body>
	<!-- InstanceEnd -->
</html>
