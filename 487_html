													<script type="text/javascript">
jQuery.noConflict();
jQuery(document).ready(function(){
jQuery('#datepicker').datepicker({
	inline: true,
	hideIfNoPrevNext : true,
	beforeShowDay: noBefore,
	showOtherMonths : true,
	selectOtherMonths : true,
	onSelect: function(dateText, inst){
		jQuery(".evenement_agenda").hide();
		jQuery('#'+dateText).show();
	}
});
});
function showHide(id_div){
	jQuery('#'+id_div).slideToggle();
	jQuery('#fleche_haut_agenda').toggle();
	jQuery('#fleche_bas_agenda').toggle();
	jQuery('#bas_agenda').toggle();
	jQuery('#espace').toggle();
}

function noBefore(date){

	m = date.getMonth(), d = date.getDate(), y = date.getFullYear();
	currentDate = new Date();
	currentM = currentDate.getMonth(), currentD = currentDate.getDate(), currentY = currentDate.getFullYear();
	
	laDate = new Date(y,m,d);
	laDateActuelle = new Date(currentY,currentM,currentD);
	
	if (laDate < laDateActuelle){
		return [false];
	}
	
	for(var i = 0, l = tabEvt.length; i < l; i++) {
		var temp = tabEvt[i].split('-');
		testDate = new Date(temp[0],temp[1]-1,temp[2]);
		if (laDate.toString() == testDate.toString()){
			return [true,'greyEvt'];
		}
	}

	return [true];
}
