                        oPrintLien.setAttribute('id', 'imprimer');
                        //lien sur le lien :)
                        oPrintLien.setAttribute("href", "javascript:window.print()");
                        //je ne sais pas pourquoi on doit mettre le lien dans un span pour l'afficher	
                        var oPrintSpan = document.createElement("span");
                        //on pousse le lien dans le span
                        oPrintSpan.appendChild(oPrintLien);
                        //on affiche le lien
                        document.write(oPrintSpan.innerHTML);
                    } catch (e) {
                    }
                    -- >
            
									</script>
								</li>
								<li>
